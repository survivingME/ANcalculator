<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trembleguy.DarkCalculator">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.trembleguy.DarkCalculator.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trembleguy.DarkCalculator.ResultsActivity"
            android:label="运算结果" />
        <activity
            android:name="com.trembleguy.DarkCalculator.CapitalMoneyActivity"
            android:label="大写数字"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.trembleguy.DarkCalculator.BigDecimalActivity"
            android:label="大数运算"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.trembleguy.DarkCalculator.BaseConversionActivity"
            android:label="进制转换"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.trembleguy.DarkCalculator.AboutActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>